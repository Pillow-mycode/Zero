<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_gradient">

    <!-- 左头像 -->
    <FrameLayout
        android:id="@+id/leftAvatarContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@id/rightAvatarContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent">


    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/leftAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_girl"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeColor="#FF80AB"
            app:strokeWidth="2dp"
            android:elevation="4dp"/>
        <!-- 红点提示 -->
        <View
            android:id="@+id/redDot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/red_dot_badge"
            android:layout_gravity="top|start"
            android:elevation="8dp"/>

    </FrameLayout>

    <!-- 右头像 -->
    <FrameLayout
        android:id="@+id/rightAvatarContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintStart_toEndOf="@id/leftAvatarContainer"
        app:layout_constraintEnd_toEndOf="parent">


    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/rightAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_boy"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeColor="#F06292"
            app:strokeWidth="2dp"
            android:elevation="4dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
